extends ../layout

block content
 div.container
  a.btn.btn-light(href='/') Volver

 div.container.mt-5   
    a.btn.btn-success(href='/bicicletas/create' role="button") Nueva Bicicleta
    table.table.mt-5
      thead
        tr
          th(scope='col') #
          th(scope='col') Color
          th(scope='col') Modelo
          th(scope='col') Ubicacion
          th(scope='col') 
          th(scope='col') 
      tbody
        each bici in bicis
          tr
            th(scope='row')
              = bici.code
            td= bici.color
            td= bici.modelo
            td= bici.ubicacion
            td
              a(href="bicicletas/" + bici.id +"/update" class="btn btn-outline-success") editar
            td
              form.inline(method="post" action="bicicletas/"+ bici.id + "/delete")
                input(type="hidden" name="id" value=bici.id)
                button.link-button(type="submit" name="submit_param" value="submit_value" class="btn btn-danger") 
                  = "Eliminar"
                