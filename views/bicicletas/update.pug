extends ../layout

block content 
 div.container.mt-5
  a.btn.btn-success(href='/bicicletas') Volver

  br
  br
  br
  
  h1.text-center Actualizando Bicicleta
  div
   .container
    .row
     .col-6.mx-auto

     form(action=`/bicicletas/${bici.code}/update` method='post')
        label.col-sm-2.col-form-label(for='code') Code: 
        input#code.form-control(type='text' name='code' value=bici.code)
        br
        label(for='color') Color: 
        input#color.form-control(type='text' name='color' value=bici.color)
        br
        label(for='modelo') Modelo: 
        input#modelo.form-control(type='text' name='modelo' value=bici.modelo)
        br
        label(for='lat') Longitud: 
        input#lat.form-control(type='text' name='lng' value=bici.ubicacion[0])
        br
        label(for='lng')  Latitud:
        input#lng.form-control(type='text' name='lat' value=bici.ubicacion[1])
        br
        br
        input#ok(type='submit' value='OK' class="btn btn-primary")
